[Unit]
Description=Eryajfgo
After=network.target

[Service]
Type=simple
# 运行用户
User=root
Group=root

Environment="ENV=prod"

WorkingDirectory=/data/www/eryajfgo
ExecStart=/data/www/eryajfgo/eryajfgo
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -s KILL $MAINPID

# 自动守护
Restart=on-failure
RestartSec=3s

# 系统打开文件数
LimitNOFILE=102400
LimitNPROC=102400
LimitCORE=infinity

[Install]
WantedBy=multi-user.target